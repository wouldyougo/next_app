<% provide(:title, "Sign in") %>
<% if find_me? %>
    <p>Find me in app/views/sessions/new.html.erb</p>
<% end %>

<h1>
  <%= t('Sign in') %>
</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit t('Sign in'), class: "btn btn-large btn-primary" %>
    <% end %>
	<!-- 
  	<p>Новый пользователь? <%= link_to "Регистрация", signup_path %></p>
  	<p>Забыли свой пароль? <%= link_to "Восстановить пароль", new_password_reset_path %></p>
  	-->
    <p><%= link_to "Восстановить пароль?", new_password_reset_path %></p>
  </div>
</div>
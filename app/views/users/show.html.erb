<% provide(:title, @user.name) %>
<!--
<%= @user.name %>, <%= @user.email %>
-->
<%= "show.html" %>
<div class="row">
  <aside class="span4">
    <section>
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <span>
        <%= @user.email %>
      </span>      
    </section>
  </aside>

  <%= "_micropost.html" %>
  <div class="span8">
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>
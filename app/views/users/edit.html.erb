<% if find_me? %>
    <p>Find me in app/views/users/edit.html.erb</p>
<% end %>

<% provide(:title, "Edit user") %>
<h1><%= t('Edit user page') %></h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
	<%= render 'shared/user_error_messages', object: f %>
      <%= render 'fields', f: f %>
        <!--%= f.submit "Save changes", class: "btn btn-large btn-primary" %-->
        <%= f.submit t('Save changes'), class: "btn btn-large btn-primary" %>
    <% end %>

    <!--
    <%= gravatar_for @user %>
    <a href="http://gravatar.com/emails">change</a>
    -->
  </div>
</div>
